<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.MfwysParameterMapper">
    
    <resultMap type="MfwysParameter" id="MfwysParameterResult">
        <result property="id"    column="id"    />
        <result property="plan"    column="plan"    />
        <result property="channel"    column="channel"    />
        <result property="account"    column="account"    />
    </resultMap>
	
	<sql id="selectMfwysParameterVo">
        select id, plan, channel, account from mfwys_parameter
    </sql>
	
    <select id="selectMfwysParameterList" parameterType="MfwysParameter" resultMap="MfwysParameterResult">
        <include refid="selectMfwysParameterVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
             <if test="plan != null  and plan != '' "> and plan = #{plan}</if>
             <if test="channel != null  and channel != '' "> and channel = #{channel}</if>
             <if test="account != null  and account != '' "> and account = #{account}</if>
         </where>
    </select>
    
    <select id="selectMfwysParameterById" parameterType="Long" resultMap="MfwysParameterResult">
        <include refid="selectMfwysParameterVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertMfwysParameter" parameterType="MfwysParameter" useGeneratedKeys="true" keyProperty="id">
        insert into mfwys_parameter
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="plan != null  and plan != ''  ">plan,</if>
			<if test="channel != null  and channel != ''  ">channel,</if>
			<if test="account != null  and account != ''  ">account,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="plan != null  and plan != ''  ">#{plan},</if>
			<if test="channel != null  and channel != ''  ">#{channel},</if>
			<if test="account != null  and account != ''  ">#{account},</if>
         </trim>
    </insert>
	 
    <update id="updateMfwysParameter" parameterType="MfwysParameter">
        update mfwys_parameter
        <trim prefix="SET" suffixOverrides=",">
            <if test="plan != null  and plan != ''  ">plan = #{plan},</if>
            <if test="channel != null  and channel != ''  ">channel = #{channel},</if>
            <if test="account != null  and account != ''  ">account = #{account},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteMfwysParameterById" parameterType="Long">
        delete from mfwys_parameter where id = #{id}
    </delete>
	
    <delete id="deleteMfwysParameterByIds" parameterType="String">
        delete from mfwys_parameter where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
    <select id="getMfwysParameterByChannel" parameterType="String" resultMap="MfwysParameterResult">
        <include refid="selectMfwysParameterVo"/>
        where channel = #{channel}
    </select>
    
    
</mapper>