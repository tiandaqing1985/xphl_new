<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SeqMapper">
    
	<select id="selectNumByType" parameterType="String" resultType="String">
		select num from xz_seq where type1 = #{param1} and type2 = #{param2}
	</select>

	<insert id="insertSeq" parameterType="String">
		insert into xz_seq(type1,type2,num) values(#{param1},#{param2},0)
	</insert>

	<update id="addSeqNumByType" parameterType="String">
		update xz_seq set num = num + 1 where type1 = #{param1} and type2 = #{param2}
	</update>
   
</mapper>